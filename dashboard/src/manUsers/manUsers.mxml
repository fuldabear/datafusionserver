<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" width="100%" height="100%">
	<mx:Script source="manUsers.as"/>
	<mx:HBox x="0" y="0" width="100%" height="100%">
		<mx:Panel x="0" y="0" width="25%" height="100%" title="Users">
			<!-- <mx:Tree id="userTree" width="100%" height="100%" dataProvider="{this.userNames}" change="{this.getUserInformation(event)}" creationComplete="{this.getUsersTable()}"/> -->
			<mx:DataGrid id="users" height="100%" width="100%" x="0" y="0" dataProvider="{this.userNames.rootItem}" change="{this.getUserInformation(event)}" creationComplete="{this.init()}" showHeaders="false"/>
			<mx:ControlBar>
				<mx:HBox width="100%" height="100%">
					<mx:Spacer width="100%"/>
					<mx:Button label="Add"/>
					<mx:Button label="Remove"/>
				</mx:HBox>
			</mx:ControlBar>
		</mx:Panel>
		<mx:Panel x="0" y="0" width="100%" height="100%" title="Properties">
			<mx:Spacer/>
			<mx:VBox width="100%" height="100%">
				<mx:Grid width="100%">
					<mx:GridRow width="100%" height="100%">
						<mx:GridItem>
							<mx:Image width="150" height="150" source="manUsers/userIcon150.png" scaleContent="true"/>
						</mx:GridItem>
						<mx:GridItem>
							<mx:Grid>
								<mx:GridRow width="100%" height="100%">
									<mx:GridItem width="100%" height="100%" horizontalAlign="right" verticalAlign="bottom">
										<mx:Label text="First Name:"/>
									</mx:GridItem>
									<mx:GridItem width="100%" height="100%">
										<mx:TextInput id="userFirstName" width="200"/>
									</mx:GridItem>
								</mx:GridRow>
								<mx:GridRow width="100%" height="100%">
									<mx:GridItem width="100%" height="100%" horizontalAlign="right" verticalAlign="bottom">
										<mx:Label text="Last Name:"/>
									</mx:GridItem>
									<mx:GridItem width="100%" height="100%">
										<mx:TextInput id="userLastName" width="200"/>
									</mx:GridItem>
								</mx:GridRow>
								<mx:GridRow width="100%" height="100%">
									<mx:GridItem width="100%" height="100%" horizontalAlign="right" verticalAlign="bottom">
										<mx:Label text="User Name:"/>
									</mx:GridItem>
									<mx:GridItem width="100%" height="100%">
										<mx:TextInput id="userUserName" width="200"/>
									</mx:GridItem>
								</mx:GridRow>
								<mx:GridRow width="100%" height="100%">
									<mx:GridItem width="100%" height="100%" horizontalAlign="right" verticalAlign="bottom">
										<mx:Label text="Contact Number:"/>
									</mx:GridItem>
									<mx:GridItem width="100%" height="100%">
										<mx:TextInput id="userContactNumber" width="200"/>
									</mx:GridItem>
								</mx:GridRow>
								<mx:GridRow width="100%" height="100%">
									<mx:GridItem width="100%" height="100%" horizontalAlign="right" verticalAlign="bottom">
										<mx:Label text="Email Address:"/>
									</mx:GridItem>
									<mx:GridItem width="100%" height="100%">
										<mx:TextInput id="userEmailAddress" width="200"/>
									</mx:GridItem>
								</mx:GridRow>
							</mx:Grid>
						</mx:GridItem>
						<mx:GridItem width="100%">
							<mx:Grid width="100%" height="100%">
								<mx:GridRow width="100%" height="100%">
									<mx:GridItem width="100%" height="100%">
										<mx:DataGrid id="logInIps" width="100%" height="100%" dataProvider="{this.userLogInLocations.rootItem}"/>
									</mx:GridItem>
								</mx:GridRow>
							</mx:Grid>
						</mx:GridItem>
					</mx:GridRow>
				</mx:Grid>
				<mx:HRule width="100%"/>
				<mx:Grid>
					<mx:GridRow width="100%" height="100%">
						<mx:GridItem width="100%" height="100%" horizontalAlign="right" verticalAlign="bottom">
							<mx:Label text="Disabled:"/>
						</mx:GridItem>
						<mx:GridItem width="100%" height="100%" horizontalAlign="center">
							<mx:CheckBox id="userDisabled"/>
						</mx:GridItem>
					</mx:GridRow>
					<mx:GridRow width="100%" height="100%">
						<mx:GridItem width="100%" height="100%" horizontalAlign="right" verticalAlign="bottom">
							<mx:Label text="Administrator:"/>
						</mx:GridItem>
						<mx:GridItem width="100%" height="100%" horizontalAlign="center">
							<mx:CheckBox id="userAdministrator"/>
						</mx:GridItem>
						<mx:GridItem width="100%" height="100%" horizontalAlign="center">
							<mx:Label text="(Note: Administrator privileges are required to enable accounts and chance access rights)"/>
						</mx:GridItem>

					</mx:GridRow>
				</mx:Grid>
				<mx:Grid width="100%" height="100%">
					<mx:GridRow width="100%">
						<mx:GridItem width="100%" height="100%" verticalAlign="middle">
							<mx:Label text="Access Rights:"/>
						</mx:GridItem>
						<mx:GridItem width="100%" height="100%" verticalAlign="middle">
							<mx:Label text="Users Event Log:"/>
						</mx:GridItem>
					</mx:GridRow>
					<mx:GridRow width="100%" height="100%">
						<mx:GridItem width="100%" height="100%">
							<mx:DataGrid id="userRights" width="100%" height="100%"/>
						</mx:GridItem>
						<mx:GridItem width="100%" height="100%">
							<mx:DataGrid id="userEventLog" width="100%" height="100%"/>
						</mx:GridItem>
					</mx:GridRow>
				</mx:Grid>
			</mx:VBox>
			<mx:ControlBar>
				<mx:Button label="Change Password"/>
				<mx:HBox width="100%" height="100%">
					<mx:Button label="Log out"/>
					<mx:Spacer width="100%" height="100%"/>
					<mx:Button label="Apply"/>
				</mx:HBox>
			</mx:ControlBar>
		</mx:Panel>
	</mx:HBox>	
</mx:Module>
