<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" width="100%" height="100%" creationComplete="init()">
	<mx:Script source="manDash.as"/>
	<mx:Canvas label="Dash Builder" width="100%" height="100%">
			<mx:HBox x="0" y="0" width="100%" height="100%">
					<mx:Panel width="50%" height="100%" layout="absolute" title="Dashboards">
							<mx:DataGrid id="listOfDashboards" x="0" y="0" width="100%" height="100%" showHeaders="false" dataProvider="{xmlListOfDashboards.rootItem}" change="{this.getDashInformation(event)}"/>
							<mx:ControlBar>
									<mx:HBox width="100%" height="100%">
											<mx:Spacer height="100%" width="100%"/>
									</mx:HBox>
							</mx:ControlBar>
					</mx:Panel>
					<mx:VBox width="100%" height="100%">
						<mx:Panel width="100%" height="100%" layout="absolute" title="Dash Preview">
							<mx:ModuleLoader  id="preview" x="0" y="0" width="100%" height="100%" url="" enabled="false" >
							</mx:ModuleLoader>
						</mx:Panel>
						<mx:Panel width="100%" height="50%" layout="absolute" title="Properties">
							<mx:Grid width="100%" height="100%">
								<mx:GridRow width="100%" height="100%">
									<mx:GridItem width="50" height="100%">
										<mx:Grid width="100%" height="100%">
											<mx:GridRow width="100%" height="100%">
												<mx:GridItem width="100%" height="100%" horizontalAlign="right" verticalAlign="middle">
													<mx:Label text="Name:"/>
												</mx:GridItem>
											</mx:GridRow>
											<mx:GridRow width="100%" height="100%">
												<mx:GridItem width="100%" height="100%" horizontalAlign="right" verticalAlign="middle">
													<mx:Label text="Title:"/>
												</mx:GridItem>
											</mx:GridRow>
											<mx:GridRow width="100%" height="100%">
												<mx:GridItem width="100%" height="100%" horizontalAlign="right" verticalAlign="middle">
													<mx:Label text="Path:"/>
												</mx:GridItem>
											</mx:GridRow>
											<mx:GridRow width="100%" height="100%">
												<mx:GridItem width="100%" height="100%" horizontalAlign="right" verticalAlign="middle">
													<mx:Label text="Menu:"/>
												</mx:GridItem>
											</mx:GridRow>
										</mx:Grid>
									</mx:GridItem>
									<mx:GridItem width="225" height="100%">
										<mx:Grid width="100%" height="100%">
											<mx:GridRow width="100%" height="100%">
												<mx:GridItem width="100%" height="100%" horizontalAlign="left" verticalAlign="middle">
													<mx:TextInput id="dash_name" width="200"/>
												</mx:GridItem>
											</mx:GridRow>
											<mx:GridRow width="100%" height="100%">
												<mx:GridItem width="100%" height="100%" verticalAlign="middle">
													<mx:TextInput id="dash_title" width="200"/>
												</mx:GridItem>
											</mx:GridRow>
											<mx:GridRow width="100%" height="100%">
												<mx:GridItem width="100%" height="100%" verticalAlign="middle">
													<mx:TextInput id="dash_path" width="200"/>
												</mx:GridItem>
											</mx:GridRow>
											<mx:GridRow width="100%" height="100%">
												<mx:GridItem width="100%" height="100%" verticalAlign="middle">
													<mx:CheckBox id="on_menu"/>
												</mx:GridItem>
											</mx:GridRow>
										</mx:Grid>
									</mx:GridItem>
									<mx:GridItem width="100%" height="100%">
										<mx:Grid>
											<mx:GridRow width="100%" height="100%">
											</mx:GridRow>
											<mx:GridRow width="100%" height="100%">
											</mx:GridRow>
										</mx:Grid>
										<mx:Grid width="100%" height="100%">
											<mx:GridRow width="100%">
												<mx:GridItem width="100%">
													<mx:Label text="Description:"/>
												</mx:GridItem>
											</mx:GridRow>
											<mx:GridRow width="100%" height="100%">
												<mx:GridItem width="100%" height="100%">
													<mx:TextArea width="99%" height="98%" id="dash_discription"/>
												</mx:GridItem>
											</mx:GridRow>
										</mx:Grid>
									</mx:GridItem>
								</mx:GridRow>
							</mx:Grid>
							<mx:ControlBar>
								<mx:HBox width="100%" height="100%">
									<mx:Spacer width="100%"/>
									<mx:Button label="Apply" click="applyButton()"/>
								</mx:HBox>
							</mx:ControlBar>
						</mx:Panel>
					</mx:VBox>
				</mx:HBox>
		</mx:Canvas>
</mx:Module>
